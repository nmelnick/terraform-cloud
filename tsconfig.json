    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM"]
  },
  "include": ["src/**/*"]
